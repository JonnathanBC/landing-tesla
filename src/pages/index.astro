---
import HeroSection from "../components/HeroSection.astro";
import LandingHeader from "../components/LandingHeader.astro";
import Layout from "../layouts/Layout.astro";
import ModelY from "../components/ModelY.astro";
---

<Layout title="Tesla Landing Page">
	<LandingHeader />
	<main
		class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll-smooth"
	>
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<ModelY />
		</div>
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<ModelY />
		</div>
	</main>

	<style is:global>
		@import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;1,300&display=swap");
	</style>
</Layout>
